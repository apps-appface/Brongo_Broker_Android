<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/refer_parent_linear"
    android:background="@drawable/drawer_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <ImageView
            android:layout_width="@dimen/back_icon_size"
            android:layout_height="@dimen/ra_back_height"
            android:src="@drawable/ic_back_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_marginLeft="@dimen/ra_margin_normal"
            android:padding="@dimen/ra_margin_large"
            android:layout_centerVertical="true"
            android:id="@+id/refer_back"/>
        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer a Broker"
            android:textColor="@color/round_empty_gray"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_big"
            app:customFont="lato_regular.ttf"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/ra_image_width"
            android:layout_height="@dimen/ra_image_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/illustration" />

        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ra_margin_large"
            android:text="Coming soon ..."
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone"/>

        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:id="@+id/refer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ra_margin_large"
            android:gravity="center"
            android:textColor="@color/refer_gray"
            android:visibility="visible"
            app:customFont="lato_regular.ttf" />

        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ra_margin_top"
            android:gravity="center"
            android:text="Your referral code"
            android:textColor="@color/refer_gray"
            android:visibility="visible"
            app:customFont="lato_regular.ttf" />

        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:id="@+id/refer_referral_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ra_margin_large"
            android:background="@drawable/ic_refer_code"
            android:gravity="center"
            android:paddingBottom="@dimen/ra_margin_normal"
            android:paddingLeft="@dimen/ra_margin_large"
            android:paddingRight="@dimen/ra_margin_large"
            android:textSize="@dimen/text_size_normal"
            android:paddingTop="@dimen/ra_margin_normal"
            android:textColor="@color/white"
            android:visibility="visible"
            app:customFont="lato_regular.ttf" />

        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:id="@+id/referral_plans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ra_margin_top"
            android:gravity="center"
            android:textColor="@color/refer_gray"
            android:visibility="visible"
            app:customFont="lato_regular.ttf" />

        <Button
            android:id="@+id/refer_broker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ra_margin_large"
            android:background="@drawable/round_white"
            android:paddingLeft="@dimen/ra_btn_padding"
            android:paddingRight="@dimen/ra_btn_padding"
            android:text="Refer a Broker"
            android:textColor="@color/appColor"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
