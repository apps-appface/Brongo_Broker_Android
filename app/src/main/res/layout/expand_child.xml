<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/expand_group_child"
        android:layout_marginLeft="@dimen/deal_normal"
        android:layout_marginRight="@dimen/deal_normal"
        android:paddingBottom="@dimen/deal_normal"
        android:id="@+id/child_linear"
        >
    <in.brongo.brongo_broker.uiwidget.CustomTextView
        android:id="@+id/expandedListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/deal_normal"
        android:paddingRight="@dimen/deal_normal"
        android:paddingTop="@dimen/deal_normal"
        android:shadowColor="#c0ffffff"
        android:textSize="@dimen/text_size_normal"
        android:gravity="left"
        android:textColor="#e63f3f3f"
        app:customFont="lato_regular"/>
    </LinearLayout>
</LinearLayout>