<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/appColor">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/contact_us"
            />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="lato_regular.ttf"
            android:layout_marginTop="10dp"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/contact_us"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ededed"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:textColor="#58595b"
                android:text="Call Us"
                android:id="@+id/callus_text"
                app:customFont="lato_regular.ttf"
                />
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/appColor"
                android:text="+91 9590269269"
                android:id="@+id/phone_text"
                android:layout_below="@+id/callus_text"
                app:customFont="lato_regular.ttf"
            />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/contact_call_btn"
                android:src="@drawable/call_icon"
                android:padding="5dp"
                android:background="@drawable/circle_purple"
                android:clickable="true"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_below="@+id/phone_text"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#58595b"
                android:text="Email Us"
                android:id="@+id/emailus_text"
                app:customFont="lato_regular.ttf"
                />
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/appColor"
                android:text="brokersupport@brongo.in"
                android:id="@+id/email_text"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/emailus_text"
                app:customFont="lato_regular.ttf"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/contact_email_btn"
                android:background="@drawable/email"
                android:clickable="true"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_below="@+id/email_text"
                android:layout_marginTop="10dp"

                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>