<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_border">
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="lato_bold.ttf"
            android:text="Project Overview"
            android:textColor="@color/appColor"
            android:textSize="18sp"
            />
        <appface.brongo.uiwidget.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_deal_flowlayout"
            android:layout_marginTop="10dp"
            app:flowDirection="leftToRight"
            android:gravity="center"
            app:elementSpacing="4dp"
            app:lineSpacing="5dp">
            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/dialog_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_purple"
                android:gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textColor="#33609b"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/dialog_project_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_purple"
                android:gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textColor="#33609b"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/dialog_project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_purple"
                android:gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textColor="#33609b"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/dialog_project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_purple"
                android:gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textColor="#33609b"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/dialog_project_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_purple"
                android:gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textColor="#33609b"
                app:customFont="lato_regular.ttf"/>
        </appface.brongo.uiwidget.FlowLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/builder_accept_btn"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@drawable/dialog_button"
                android:layout_marginRight="10dp"
                android:text="Accept"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/builder_reject_btn"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@drawable/gray_dialog_btn"
                android:layout_marginLeft="10dp"
                android:text="Reject"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>