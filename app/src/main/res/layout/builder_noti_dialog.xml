<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/edit_border">
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_project_name"
            android:layout_gravity="center_horizontal"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_project_address"
            android:layout_gravity="center_horizontal"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_project_type" />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_project_status" />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_project_budget" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/builder_accept_btn"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@color/appColor"
                android:layout_marginRight="10dp"
                android:text="Accept"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/builder_reject_btn"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@color/appColor"
                android:layout_marginLeft="10dp"
                android:text="Reject"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>