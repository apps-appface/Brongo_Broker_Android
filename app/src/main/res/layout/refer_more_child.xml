<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/refer_more_image"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/refer_more_image"
            android:layout_marginLeft="10dp">
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refree_name"
        android:textSize="15sp"
        android:textColor="#e6000000"
        app:customFont="lato_regular.ttf"/>
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refree_name"
        android:id="@+id/refree_phone"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:textColor="#b3000000"
        app:customFont="lato_regular.ttf"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/refer_more_image"
        android:background="#33000000"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>
</RelativeLayout>