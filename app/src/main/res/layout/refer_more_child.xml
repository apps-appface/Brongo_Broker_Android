<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rmf_padding_large"
        android:layout_marginRight="@dimen/rmf_padding_large"
        android:padding="@dimen/rmf_padding_normal">
    <ImageView
        android:layout_width="@dimen/rmf_plan_pic"
        android:layout_height="@dimen/rmf_plan_pic"
        android:id="@+id/refer_more_image"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/refer_more_image"
            android:layout_marginLeft="@dimen/rmf_padding_normal">
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refree_name"
        android:textSize="@dimen/text_size_normal"
        android:textColor="#e6000000"
        app:customFont="lato_regular.ttf"/>
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refree_name"
        android:id="@+id/refree_phone"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="@dimen/rmf_padding_small"
        android:layout_centerVertical="true"
        android:textColor="#b3000000"
        app:customFont="lato_regular.ttf"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_small"
        android:layout_below="@id/refer_more_image"
        android:background="#33000000"
        android:layout_marginTop="@dimen/rmf_padding_normal"/>
    </RelativeLayout>
</RelativeLayout>