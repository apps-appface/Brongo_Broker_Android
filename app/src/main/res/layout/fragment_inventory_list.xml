<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="appface.brongo.fragment.InventoryListFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/inven_linear"
        android:background="@color/white"
        android:layout_centerVertical="true">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button"
            android:text="Personal"
            android:id="@+id/inventory_personal_btn"
            android:textColor="@color/white"
            android:textAllCaps="false"
           android:paddingRight="20dp"
            android:paddingLeft="20dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/inventory_builder_btn"
            android:background="@drawable/button_change"
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="Builders"
            android:textAllCaps="false"
            android:textColor="@color/appColor" />
    </LinearLayout>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/builder_count"
         android:layout_alignRight="@+id/inven_linear"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_circular"
            android:textColor="@color/white"
            android:text="0"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#ededed">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inventory_personal_recycle"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/inventory_builder_recycle"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
    </FrameLayout>
</LinearLayout>
