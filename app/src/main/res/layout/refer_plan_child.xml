<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ra_margin_normal"
        android:paddingBottom="@dimen/ra_margin_normal">
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refer_broker_no"
        android:shadowColor="#73000000"
        android:textSize="@dimen/text_size_small"
        android:textColor="#b3000000"
        android:layout_alignParentLeft="true"
        app:customFont="lato_regular.ttf"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_rate"
            android:shadowColor="#73000000"
            android:textSize="@dimen/text_size_small"
            android:textColor="#b3000000"
            android:layout_alignParentRight="true"
            app:customFont="lato_regular.ttf"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_small"
        android:background="@color/round_empty_gray"/>
</LinearLayout>