<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="20dp"
            android:src="@drawable/ic_remove"
            android:layout_gravity="right"
            android:id="@+id/dialog_close_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:layout_marginTop="20dp"
            android:textSize="23.3sp"
            android:textColor="#88288f"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Congrats! "
            app:customFont="lato_bold.ttf"
            />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:textSize="16.7sp"
            android:layout_marginTop="20dp"
            android:textColor="#6e6e6e"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6.7sp"
            android:id="@+id/bid_accepted_text"
            android:gravity="center_horizontal"
            android:text="@string/message"
            app:customFont="lato_regular.ttf"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Details"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:id="@+id/dialog_see_details"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_button"
            />
    </LinearLayout>


</LinearLayout>