<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/edit_border">
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#c0ffffff"
        android:shadowDx="6.123233995736766e-17"
        android:shadowDy="1"
        android:textSize="18.3sp"
        android:textColor="#88288f"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal"
        android:text="You missed a Deal :("
        app:customFont="lato_bold.ttf"
        />
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/missed_dialog_message"
        android:shadowColor="#c0ffffff"
        android:shadowDx="6.123233995736766e-17"
        android:shadowDy="1"
        android:textSize="15sp"
        android:textColor="#6e6e6e"
        android:gravity="center_horizontal"
        android:text="You just missed a new deal from ‘’ request for ‘Rent property’. Please check your internet connection and ensure your Brongo App is open at all times to accept
the next deal!"
        app:customFont="lato_regular.ttf" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok Got it!"
        android:id="@+id/missed_deal_dialog_btn"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_button"
        />
</LinearLayout>

</RelativeLayout>