<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:id="@+id/docu_imageview"
           android:scaleType="fitXY"/>
    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp">
           <appface.brongo.uiwidget.CustomTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Re-Capture"
               android:padding="5dp"
               android:drawableLeft="@drawable/ic_recapture"
               android:textSize="18sp"
               android:drawablePadding="5dp"
               android:textColor="@color/edit_hint_color"
               android:id="@+id/recapture_text"
               android:layout_marginLeft="10sp"
               android:gravity="center"
               app:customFont="lato_regular.ttf"
               android:background="?attr/selectableItemBackground"
               android:clickable="true"
               android:layout_alignParentLeft="true"/>
           <appface.brongo.uiwidget.CustomTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Remove"
               android:drawableLeft="@drawable/ic_remove"
               android:padding="5dp"
               android:drawablePadding="5dp"
               android:textSize="20sp"
               android:layout_marginLeft="10sp"
               android:gravity="center"
               android:textColor="@color/edit_hint_color"
               android:id="@+id/remove_text"
               app:customFont="lato_regular.ttf"
               android:background="?attr/selectableItemBackground"
               android:clickable="true"
             android:layout_alignParentRight="true"
               />

   </RelativeLayout>

</LinearLayout>