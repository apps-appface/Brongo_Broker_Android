<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdf_noti_rel_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.PdfNotificationActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/push_back"
        android:minHeight="250dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <ImageView
            android:id="@+id/pdf_noti_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_file" />

        <TextView
            android:id="@+id/pdf_noti_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pdf_noti_logo"
            android:layout_marginTop="@dimen/margin_20"
            android:text="Title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pdf_noti_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pdf_noti_title"
            android:layout_marginTop="@dimen/margin_20"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="A “Me in 30 Seconds” statement is a simple way to present to someone else a balanced understanding of who you are. It piques the interest of a listener who invites you to “Tell me a little about yourself,” and it provides a brief and compelling answer to the question “Why should I hire you?” "
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pdf_noti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pdf_noti_title"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/round_white"
            android:text="Download" />


    </LinearLayout>

</RelativeLayout>