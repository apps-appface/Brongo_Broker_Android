<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_border"
        android:paddingBottom="20dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:src="@drawable/ic_remove"
        android:layout_gravity="right"
        android:id="@+id/tc_close_btn"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tc_close_btn"
        android:layout_above="@+id/tcDialog_accept"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
       >
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"

            android:textSize="23.3sp"
            android:textColor="#88288f"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Terms &amp; Conditions"
            app:customFont="lato_bold.ttf"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:text="@string/builder_tc"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="#6e6e6e"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6.7sp"
            android:id="@+id/bid_accepted_text"

            app:customFont="lato_regular.ttf"
            />
        </ScrollView>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textColor="#88288f"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:id="@+id/tcDialog_commission"
            app:customFont="lato_bold.ttf"
            />
    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:id="@+id/tcDialog_accept"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_button"/>
    </RelativeLayout>


</LinearLayout>