<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/revf_padding_large"
    android:paddingLeft="@dimen/revf_padding_large"
    android:paddingTop="@dimen/revf_padding_large"
    android:background="#ededed"
    tools:context="appface.brongo.fragment.ReviewFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/review_page_linear"
        android:padding="@dimen/revf_padding_normal"
        android:background="@drawable/app_back">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/review_image"
                android:layout_width="@dimen/revf_prof_image"
                android:layout_height="@dimen/revf_prof_image"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                />
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/revf_padding_normal"
                android:textSize="@dimen/text_size_big"
                android:id="@+id/review_broker_name"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/review_image"
                android:layout_centerVertical="true"
                app:customFont="lato_bold.ttf"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_broker_badge"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_small"
            android:background="#F1F4F7"
            android:layout_marginTop="@dimen/revf_padding_normal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/revf_padding_normal"
            >
            <RatingBar
                android:id="@+id/review_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="false"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/star_yellow"
                android:stepSize="0.5" />
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_count1"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/review_ratingBar"
                android:layout_marginLeft="@dimen/revf_padding_normal"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_rating_value"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                app:customFont="lato_regular.ttf"/>
        </RelativeLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/revf_padding_normal"
        android:paddingLeft="@dimen/revf_padding_normal"
        android:paddingBottom="@dimen/revf_padding_normal"
        android:background="@color/white"
        android:id="@+id/review_recycle"
        android:layout_below="@+id/review_page_linear"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
