<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/deal_normal"
    android:layout_marginLeft="@dimen/deal_large"
    android:layout_marginRight="@dimen/deal_large"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/deal_normal"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submenu_back"
        style="?android:attr/buttonBarButtonStyle"
        android:shadowColor="#c0ffffff"
        android:textSize="@dimen/text_size_normal"
        android:paddingRight="@dimen/deal_large"
        android:textColor="#88288f"
        android:textAllCaps="false"
        android:id="@+id/legal_item_btn"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/deal_normal"
        />
    <ImageView
        android:layout_width="@dimen/fwd_arrow_width"
        android:layout_height="@dimen/fwd_arrow_height"
        android:src="@drawable/ic_small_arrow_2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/deal_large"/>
</RelativeLayout>