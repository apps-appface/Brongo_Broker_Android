<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    ><RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/logo_colored"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"/>
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incoming Request"
        android:gravity="center_horizontal"
        android:textColor="#b31d4f91"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:customFont="lato_regular.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/push_back"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/client__notifiation_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                />

            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/notification_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:customFont="lato_regular.ttf"/>

                <RatingBar
                    android:id="@+id/noti_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:layout_gravity="center_horizontal"
                    android:progressTint="@color/star_yellow"

                    android:stepSize="0.5"
                    android:layout_below="@+id/notification_client_name"/>

            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/noti_client_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:padding="5sp"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="13sp"
                android:textColor="#ffffff"
                app:customFont="lato_bold.ttf"/>

            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/noti_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textColor="#ffffff"
                app:customFont="lato_regular.ttf"/>

            <appface.brongo.uiwidget.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/push_flowlayout"
                app:flowDirection="leftToRight"
                app:elementSpacing="4dp"
                app:lineSpacing="5dp"
                android:gravity="center">
                <appface.brongo.uiwidget.CustomTextView
                    android:id="@+id/noti_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_empty_btn"
                    android:padding="5sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:shadowColor="#73000000"
                    android:shadowDx="6.123233995736766e-17"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:textSize="13sp"
                    android:textColor="#88288f"
                    android:visibility="gone"
                    app:customFont="lato_regular.ttf"/>

                <appface.brongo.uiwidget.CustomTextView
                    android:id="@+id/noti_bhk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_empty_btn"
                    android:padding="5sp"
                    android:gravity="center"
                    android:shadowColor="#73000000"
                    android:shadowDx="6.123233995736766e-17"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:textSize="13sp"
                    android:textColor="#88288f"
                    android:visibility="gone"
                    app:customFont="lato_regular.ttf"/>

                <appface.brongo.uiwidget.CustomTextView
                    android:id="@+id/noti_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_empty_btn"
                    android:gravity="center"
                    android:padding="5sp"
                    android:textAllCaps="false"
                    android:shadowColor="#73000000"
                    android:shadowDx="6.123233995736766e-17"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:textSize="13sp"
                    android:textColor="#88288f"
                    android:visibility="gone"
                    app:customFont="lato_regular.ttf"/>

                <appface.brongo.uiwidget.CustomTextView
                    android:id="@+id/noti_prop_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_empty_btn"
                    android:padding="5sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:shadowColor="#73000000"
                    android:shadowDx="6.123233995736766e-17"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:textSize="13sp"
                    android:textColor="#88288f"
                    android:visibility="gone"
                    app:customFont="lato_regular.ttf"/>

                <appface.brongo.uiwidget.CustomTextView
                    android:id="@+id/noti_prop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_empty_btn"
                    android:padding="5sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:shadowColor="#73000000"
                    android:shadowDx="6.123233995736766e-17"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:textSize="13sp"
                    android:textColor="#88288f"
                    android:visibility="gone"
                    app:customFont="lato_regular.ttf"/>
            </appface.brongo.uiwidget.FlowLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <ng.max.slideview.SlideView
                    android:id="@+id/slideView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:animateSlideText="true"
                    app:buttonBackgroundColor="@color/white"
                    app:buttonImage="@drawable/swipe_icon_small"
                    app:reverseSlide="false"
                    app:slideBackgroundColor="@color/white"
                    app:slideText="Swipe to Accept                "
                    app:slideTextColor="@color/appColor"/>
            </RelativeLayout>

            <appface.brongo.uiwidget.CustomTextView
                android:id="@+id/noti_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="Reject"
                android:shadowColor="#73000000"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:textSize="16sp"
                android:textColor="#ffffff"
                app:customFont="lato_regular.ttf"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_purple"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/noti_matching_property"
            android:visibility="visible"
            app:customFont="lato_bold.ttf"/>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/container"
            android:layout_gravity="center">
        <ProgressBar
            android:id="@+id/noti_progressBar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:indeterminate="false"
            android:layoutDirection="rtl"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="120"
            android:progress="0" />

        <appface.brongo.uiwidget.CustomTextView
            android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:shadowColor="#73000000"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textSize="18sp"
            android:textColor="#39950c"
            app:customFont="lato_bold.ttf"/>
    </RelativeLayout>
    </LinearLayout>
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/premium_back"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        android:id="@+id/push_plan_text"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/black"
        app:customFont="lato_bold.ttf"/>
</RelativeLayout>

</ScrollView>