<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_network_error"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:layout_marginTop="20dp"
            android:textSize="23.3sp"
            android:textColor="#88288f"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Network Error "
            app:customFont="lato_bold.ttf"
            />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:textSize="16.7sp"
            android:layout_marginTop="20dp"
            android:textColor="#6e6e6e"
            android:lineSpacingExtra="6.7sp"
            android:gravity="center_horizontal"
            android:text="You seem to have lost your
internet connection. Try again with an active connection"
            app:customFont="lato_regular.ttf"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try again"
            android:id="@+id/internet_dialog_btn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_button"
            />
    </LinearLayout>

</LinearLayout>