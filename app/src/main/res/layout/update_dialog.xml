<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/walkthrough_back"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_border"
            android:paddingLeft="@dimen/dialog_margin_large"
            android:paddingRight="@dimen/dialog_margin_large"
            android:paddingTop="@dimen/dialog_margin_large"
            android:paddingBottom="@dimen/dialog_margin_layout"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dialog_margin_layout"
            android:layout_marginRight="@dimen/dialog_margin_layout">
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:textSize="@dimen/dialog_title_size"
            android:textColor="#88288f"
            android:layout_marginTop="@dimen/dialog_margin_large"
            android:text="New version available"
            app:customFont="lato_bold.ttf"
            />
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:layout_marginTop="@dimen/dialog_margin_normal"
            android:textSize="@dimen/text_size_big"
            android:textColor="#6e6e6e"
            android:text="Please update app to new version"
            app:customFont="lato_regular.ttf"
            />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/appColor"
          android:text="UPDATE"
          android:id="@+id/update_dialog_btn"
          android:padding="@dimen/dialog_margin_normal"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/dialog_margin_normal"/>

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>