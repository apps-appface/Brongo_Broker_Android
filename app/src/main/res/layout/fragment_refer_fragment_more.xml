<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="appface.brongo.fragment.ReferFragmentMore">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refree_relative">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:id="@+id/refer_tool">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_back_white"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:id="@+id/refer_back2"/>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer a Broker"
            android:textColor="@color/round_empty_gray"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            app:customFont="lato_regular.ttf"/>
    </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/refer_tool"
            android:id="@+id/refer_image"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/appColor"
            android:gravity="center_horizontal"
            android:layout_below="@+id/refer_image"
            android:layout_alignParentBottom="true"
            android:padding="20dp">
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Credit"
                android:shadowColor="#c0ffffff"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:textSize="16sp"
                android:textColor="#99ffffff"
                app:customFont="lato_regular.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"/>
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refer_credit_value"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:customFont="lato_regular.ttf"/>
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/refree_relative">
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:id="@+id/referee_count_text"
                android:shadowColor="#c0ffffff"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:textSize="18sp"
                android:textColor="#88288f"
                app:customFont="lato_bold.ttf"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/referee_recycle"></android.support.v7.widget.RecyclerView>
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View all"
                android:gravity="center"
                android:shadowColor="#c0ffffff"
                android:shadowDx="6.123233995736766e-17"
                android:shadowDy="1"
                android:textSize="16.7sp"
                android:textColor="#88288f"
                android:id="@+id/refer_viewall"
                app:customFont="lato_regular.ttf"/>

            <Button
                android:id="@+id/refer_more_broker_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_button"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:text="Refer more brokers"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
