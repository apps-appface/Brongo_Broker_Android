<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_margin_large"
    android:gravity="center"
    android:background="@drawable/drawer_background">
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big"
        android:layout_marginTop="@dimen/dialog_margin_large"
        android:text="Reason for Drop out"
        android:gravity="center"
        app:customFont="lato_regular.ttf"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_border"
            android:id="@+id/drop_layout"
            android:paddingTop="@dimen/dialog_margin_normal"
            android:paddingLeft="@dimen/dialog_margin_layout"
            android:paddingRight="@dimen/dialog_margin_layout"
            android:paddingBottom="@dimen/dialog_margin_large"
            android:layout_marginTop="@dimen/dialog_margin_large"
            android:layout_marginRight="@dimen/dialog_margin_large"
            android:layout_marginLeft="@dimen/dialog_margin_large">
            <ImageView
                android:id="@+id/client_image_drop"
                android:layout_width="@dimen/dialog_margin_sixty"
                android:layout_height="@dimen/dialog_margin_sixty"
                android:scaleType="fitXY"
                android:layout_gravity="center" />
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_big"
                android:layout_marginTop="@dimen/dialog_margin_large"
                android:textColor="@color/edit_text_color"
                android:gravity="center"
                android:id="@+id/client_name_drop"
                app:customFont="lato_bold.ttf"/>
            <appface.brongo.uiwidget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_margin_normal"
                android:textColor="@color/round_empty_gray"
                android:gravity="center"
                android:id="@+id/client_address_drop"
                app:customFont="lato_regular.ttf"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unable to match client requirements"
                android:id="@+id/drop_check1"
                android:layout_marginLeft="@dimen/dialog_margin_normal"
                android:layout_marginTop="@dimen/dialog_margin_large"
                android:textColor="@color/round_empty_gray"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Emergency"
                android:id="@+id/drop_check2"
                android:layout_marginLeft="@dimen/dialog_margin_normal"
                android:textColor="@color/round_empty_gray"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I dont like the client"
                android:id="@+id/drop_check3"
                android:layout_marginLeft="@dimen/dialog_margin_normal"
                android:textColor="@color/round_empty_gray"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_button"
                android:layout_gravity="center"
                android:id="@+id/drop_Submit"
                android:text="Submit"
                android:paddingRight="@dimen/btn_padding"
                android:paddingLeft="@dimen/btn_padding"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/dialog_margin_large"
                android:textColor="@color/white"/>
        </LinearLayout>
        <appface.brongo.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/premium_back"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dialog_margin_layout"
            android:text="PREMIUM"
            android:gravity="center"
            android:id="@+id/drop_plan"
            android:padding="@dimen/dialog_margin_small"
            android:layout_marginRight="@dimen/dialog_margin_small"
            android:layout_alignParentRight="true"
            app:customFont="lato_bold.ttf"
            />
    </RelativeLayout>

</LinearLayout>