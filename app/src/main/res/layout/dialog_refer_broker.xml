<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="30dp">

    <appface.brongo.uiwidget.CustomTextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Refer a Broker"
        android:textColor="@color/appColor"
        android:textSize="25sp"
        app:customFont="lato_bold.ttf" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_referee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/edit_hint_color"
        android:layout_marginTop="20dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
        <EditText
            android:id="@+id/referee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="REFEREE NAME"
            android:maxLength="32"
            app:backgroundTint="@color/edit_hint_color"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_referee_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/edit_hint_color"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
        <EditText
            android:id="@+id/referee_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MOBILE NUMBER"
            android:inputType="phone"
            app:backgroundTint="@color/edit_line"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button"
        android:layout_marginTop="20dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Submit"
        android:id="@+id/refer_submit_btn"/>
    <appface.brongo.uiwidget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR CHOOSE FROM"
        android:textColor="@color/edit_hint_color"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:customFont="lato_regular.ttf"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_phonebook"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableTop="@drawable/ic_phonebook"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="Phonebook"
            android:textAllCaps="false"
            android:textColor="@color/round_empty_gray" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_whatsapp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableTop="@drawable/ic_whatsapp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="Whatsapp"
            android:textAllCaps="false"
            android:textColor="@color/round_empty_gray" />

    </LinearLayout>
</LinearLayout>