<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dialog_margin_layout">

    <in.brongo.brongo_broker.uiwidget.CustomTextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Refer a Broker"
        android:textColor="@color/appColor"
        android:textSize="@dimen/dialog_title_size"
        app:customFont="lato_bold.ttf" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_referee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/edit_hint_color"
        android:layout_marginTop="@dimen/dialog_margin_large"
        android:imeOptions="actionNext"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
        <EditText
            android:id="@+id/referee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="REFEREE NAME"
            android:inputType="textCapWords"
            app:backgroundTint="@color/edit_hint_color"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_referee_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/edit_hint_color"
        android:imeOptions="actionDone"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
        <EditText
            android:id="@+id/referee_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MOBILE NUMBER"
            android:inputType="phone"
            app:backgroundTint="@color/edit_line"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button"
        android:layout_marginTop="@dimen/dialog_margin_large"
        android:paddingRight="@dimen/dialog_margin_sixty"
        android:paddingLeft="@dimen/dialog_margin_sixty"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Submit"
        android:id="@+id/refer_submit_btn"/>
    <in.brongo.brongo_broker.uiwidget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR CHOOSE FROM"
        android:textColor="@color/edit_hint_color"
        android:layout_marginTop="@dimen/dialog_margin_large"
        android:gravity="center"
        app:customFont="lato_regular.ttf"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_phonebook"
            android:layout_marginRight="@dimen/dialog_margin_layout"
            android:layout_marginTop="@dimen/dialog_margin_normal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/dialog_round_icon_size"
                android:layout_height="@dimen/dialog_round_icon_size"
                android:src="@drawable/ic_phonebook"
                android:id="@+id/refer_phone_imageview"
                android:layout_centerHorizontal="true"/>
            <in.brongo.brongo_broker.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refer_phone_imageview"
                android:text="Phonebook"
                android:layout_centerHorizontal="true"
                android:textColor="@color/round_empty_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refer_whatsapp"
            android:layout_marginLeft="@dimen/dialog_margin_layout"
            android:layout_marginTop="@dimen/dialog_margin_normal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/dialog_round_icon_size"
                android:layout_height="@dimen/dialog_round_icon_size"
                android:src="@drawable/ic_whatsapp"
                android:id="@+id/refer_whatsapp_imageview"
                android:layout_centerHorizontal="true"/>
            <in.brongo.brongo_broker.uiwidget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refer_whatsapp_imageview"
                android:text="Whatsapp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/round_empty_gray"/>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>