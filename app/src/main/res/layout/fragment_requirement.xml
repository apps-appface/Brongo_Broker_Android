<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ededed"
    tools:context="appface.brongo.fragment.RequirementFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/edit_border"
        android:layout_margin="20dp"
        android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <appface.brongo.uiwidget.CustomTextView
            android:id="@+id/req_deal_id"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e5eaf0"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:textColor="#1d4f91"
            app:customFont="lato_regular.ttf"/>
        <appface.brongo.uiwidget.CustomTextView
            android:id="@+id/req_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:shadowColor="#73000000"
            android:shadowDx="6.123233995736766e-17"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="#64687f"
            android:textSize="13sp"
            app:customFont="lato_bold.ttf" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requirement_linear"
            android:orientation="vertical"
            android:layout_marginTop="10dp"></LinearLayout>
    </LinearLayout>

</ScrollView>
