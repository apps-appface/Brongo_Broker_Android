<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_border"
    android:layout_marginLeft="@dimen/builder_large"
    android:layout_marginRight="@dimen/builder_large"
    android:layout_marginTop="@dimen/builder_normal"
    android:layout_marginBottom="@dimen/builder_normal"
    android:padding="@dimen/builder_big"
    android:paddingBottom="@dimen/builder_normal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/builder_web_linear">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/prof_pic_size"
            android:layout_height="@dimen/prof_pic_size"
            android:id="@+id/invent_builder_image"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:textColor="#163d70"
            android:textSize="@dimen/text_size_big"
            android:layout_toRightOf="@+id/invent_builder_image"
            android:layout_marginLeft="@dimen/builder_normal"
            android:id="@+id/invent_builder_project"
            app:customFont="lato_bold.ttf"/>
        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#c0ffffff"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#6e6e6e"
            android:layout_marginTop="@dimen/builder_small"
            android:layout_toRightOf="@+id/invent_builder_image"
            android:layout_marginLeft="@dimen/builder_normal"
            android:id="@+id/invent_builder_addresss"
            android:layout_below="@+id/invent_builder_project"
            app:customFont="lato_regular.ttf"/>
        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#73000000"
            android:textColor="#1a9e23"
            android:textSize="@dimen/text_size_small"
            android:padding="@dimen/builder_small"
            android:layout_marginTop="@dimen/builder_small"
            android:layout_toRightOf="@+id/invent_builder_image"
            android:layout_marginLeft="@dimen/builder_normal"
            android:id="@+id/invent_builder_commission"
            android:layout_below="@+id/invent_builder_addresss"
            app:customFont="lato_regular.ttf"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_small"
            android:layout_marginTop="@dimen/builder_normal"
            android:background="@color/round_empty_gray"
            android:layout_below="@+id/invent_builder_commission"
            android:layout_alignLeft="@+id/invent_builder_commission"/>
    </RelativeLayout>
    <in.brongo.brongo_broker.uiwidget.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/builder_normal"
        app:flowDirection="leftToRight"
        android:id="@+id/builder_flowLayout"
        app:elementSpacing="@dimen/element_spacing"
        app:lineSpacing="@dimen/builder_normal">

    </in.brongo.brongo_broker.uiwidget.FlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/builder_normal"
        android:gravity="center_horizontal"
        android:id="@+id/invent_builder_linear">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:layout_weight="1"
            android:id="@+id/invent_builder_reject"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/builder_normal"
            android:background="@drawable/gray_dialog_btn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:layout_weight="1"
            android:id="@+id/invent_builder_proceed"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/builder_normal"
            android:background="@drawable/dialog_button"/>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/invent_TC_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/builder_normal"
           >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/builder_large"
        android:id="@+id/invent_builder_tc">
        <ImageView
            android:layout_width="@dimen/builder_icon_size"
            android:layout_height="@dimen/builder_icon_size"
            android:padding="@dimen/builder_small"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_terms_icon"
            android:id="@+id/tc_imageview"/>
        <in.brongo.brongo_broker.uiwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_register_tc"
            android:padding="@dimen/da_small_margin"
            android:textSize="@dimen/text_size_small"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tc_imageview"
            android:textColor="@color/edit_hint_color"
            android:layout_marginLeft="@dimen/da_big_margin"
            android:includeFontPadding="false"
            app:customFont="lato_regular.ttf"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/builder_large"
                android:layout_alignParentRight="true"
                android:id="@+id/invent_builder_register">
                <ImageView
                    android:layout_width="@dimen/builder_icon_size"
                    android:layout_height="@dimen/builder_icon_size"
                    android:padding="@dimen/builder_small"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_register_icon"
                    android:id="@+id/register_imageview"/>
                <in.brongo.brongo_broker.uiwidget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Client"
                    android:padding="@dimen/da_small_margin"
                    android:textSize="@dimen/text_size_small"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/register_imageview"
                    android:textColor="@color/edit_hint_color"
                    android:layout_marginLeft="@dimen/da_big_margin"
                    android:includeFontPadding="false"
                    app:customFont="lato_regular.ttf"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>